<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class=”users show”>
	<h2>Show User</h2>
	<table summary = “User detail view”>
	     <tr>
		<th>First Name</th>
		<td><%= @user.first_name %></td>
	    </tr>
		<th>Last Name</th>
		<td><%= @user.last_name %></td>
	    </tr>
		<th>Title</th>
		<td><%= @user.title %></td>
	    </tr>
		<th>Username</th>
		<td><%= @user.username %></td>
	    </tr>
		<th>Email</th>
		<td><%= @user.email %></td>
	    </tr>
		<th>DOB</th>
		<td><%= @user.DOB %></td>
	    </tr>
		<tr>
		<th>Phone Number</th>
		<td><%= @user.phone_number %></td>
	    </tr>
		<th>Department</th>
		<td><%= @user.department_id %></td>
	    </tr>
	</table>
	
		


