<h2>Edit Department</h2>
<%= error_messages_for(@department) %>
<div class=”departments edit”>
<%= bootstrap_form_for @department do |f| %>
	<table summary="Department form fields">
    <tr>
	<th>Department Name</th>
	<td><%= f.text_field(:dept_name) %></td>
    </tr>
	<tr>
	<th>Department Manager</th>
	<td><%= f.collection_select( :manager_id, User.all, :id, :username, {}, { :multiple => false } ) %></td>
    </tr>
	</table>
	<button type="submit" class="btn btn-primary">
	Update Department
	</button>
<% end %>
</div>