<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>
<div class="input-group" align="center" >
<div class="form-inline">
	<%= form_tag sessions_path do %>
		<%= label_tag 'username' %>
		<%= text_field_tag 'username' %>
		<%= label_tag 'password' %>
		<%= password_field_tag 'password' %>
		<%= submit_tag("Log In") %>
	<% end %>
</div>
</div>